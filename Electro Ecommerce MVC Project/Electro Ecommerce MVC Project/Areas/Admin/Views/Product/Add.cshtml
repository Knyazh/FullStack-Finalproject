@model ProductAddViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title style="color: #D10024;">User Registration</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <link rel="stylesheet" href="~/Source/Assets/Admin/css/style.css" asp-append-version="true" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
</head>
<body>

    <section id="AddProduct">
        <div class="Container">

            <div class="Row">
                <form enctype="multipart/form-data" method="POST" asp-controller="product" asp-action="add" id="FormGroupList">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div id="FormGroup" style="margin-bottom: 20px;">
                        <label asp-for="Name" style="font-weight: bold; font-size: 16px;">Name</label>
                        <input type="text" asp-for="Name" placeholder="Please enter product name..." style="width: 100%; padding: 5px; border: 1px solid #ccc;" />
                        <span asp-validation-for="Name" style="color: #D10024;"></span>
                    </div>
                    <div id="FormGroup" style="margin-bottom: 20px;">
                        <label asp-for="Description" style="font-weight: bold; font-size: 16px;">Description</label>
                        <input type="text" asp-for="Description" placeholder="Please enter product description..." style="width: 100%; padding: 5px; border: 1px solid #ccc;" />
                        <span asp-validation-for="Description" style="color: #D10024;"></span>
                    </div>
                    <div id="FormGroup" style="margin-bottom: 20px;">
                        <label asp-for="Price" style="font-weight: bold; font-size: 16px;">Price</label>
                        <input type="number" asp-for="Price" placeholder="Please enter product price..." style="width: 100%; padding: 5px; border: 1px solid #ccc;" />
                        <span asp-validation-for="Price" style="color: #D10024;"></span>
                    </div>

                    <div style="display:flex; justify-content:space-evenly; flex-wrap:wrap; "  >

                    <div id="FormGroup" style="margin-bottom: 20px;">
                        <label asp-for="MemoryIds" style="font-weight: bold; font-size: 16px;">Memories</label>
                        <select class="selectpicker" asp-for="MemoryIds" multiple data-live-search="true" style="width: 100%; padding: 5px; border: 1px solid #ccc;">
                            <option disabled>Select the memory or memories</option>

                            @if (Model.Memories != null)
                            {
                                @foreach (var memory in Model.Memories)
                                {
                                    <option value="@memory.Id">@memory.Count</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="MemoryIds" class="invalid-feedback" style="display: block"></span>
                    </div>
                    <div id="FormGroup" style="margin-bottom: 20px;">
                        <label asp-for="ColorIds" style="font-weight: bold; font-size: 16px;">Color</label>
                        <select class="selectpicker" asp-for="ColorIds" multiple data-live-search="true" style="width: 100%; padding: 5px; border: 1px solid #ccc;">
                            <option disabled>Select the color or colors</option>

                            @if (Model.Colors != null)
                            {
                                @foreach (var color in Model.Colors)
                                {
                                    <option value="@color.Id">@color.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ColorIds" class="invalid-feedback" style="display: block"></span>
                    </div>
                    <div id="FormGroup" style="margin-bottom: 20px;">
                        <label asp-for="CategoryIds" style="font-weight: bold; font-size: 16px;">Category</label>
                        <select class="selectpicker" asp-for="CategoryIds" multiple data-live-search="true" style="width: 100%; padding: 5px; border: 1px solid #ccc;">
                            <option disabled>Select the category or categories</option>

                            @if (Model.Categories != null)
                            {
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CategoryIds" class="invalid-feedback" style="display: block"></span>
                    </div>
                    </div>
                    <div id="FormGroup" style="margin-bottom: 20px;">
                        <label asp-for="Image" style="font-weight: bold; font-size: 16px;">Image</label>
                        <input type="file" asp-for="Image" placeholder="Please enter product image" style="width: 100%; padding: 5px; border: 1px solid #ccc;" />
                        <span asp-validation-for="Image" class="invalid-feedback" style="display: block"></span>
                    </div>

                    <div id="buttonGroup">
                        <button type="submit" style="background-color: #D10024; color: #fff; padding: 10px; border: none; cursor: pointer;">Save</button>
                        <button type="button" onclick="goBack()" style="background-color: #ccc; color: #000; padding: 10px; border: none; cursor: pointer;">Back</button>
                    </div>
                </form>
            </div>
        </div>
        <script>
            // Back button functionality
            function goBack() {
                window.history.back();
            }
        </script>
    </section>
</body>
</html>
